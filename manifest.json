{
  "manifest_version": 3,
  "name": "TriggerShield",
  "version": "1.0",
  "description": "Blurs images that may contain sensitive trigger content.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["triggershield.css"]
    }
  ],
//  "icons": {
//    "48": "icons/icon.png"
//  },
  "action": {
    "default_title": "TriggerShield"
  }
}
